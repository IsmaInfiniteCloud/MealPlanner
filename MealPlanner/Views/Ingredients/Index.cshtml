@model IEnumerable<MealPlanner.Models.Ingredient>

@{
    ViewData["Title"] = "Index";
}
<h1>Ingredients</h1>

<p>
    <a class="btn btn-success" asp-action="Create">Create New Ingredient</a>
</p>
<a class="btn btn-success" asp-controller="Recipes" asp-action="Index">Available Recipes</a>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Amount)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Unit)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Amount)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Unit)
            </td>
            <td>
                    <div class="btn-group">
                        <a class="btn btn-outline-success" href="@Url.Action("Edit", new { id = item.Id })">Edit</a>
                        <a class="btn btn-outline-success" href="@Url.Action("Details", new { id = item.Id })">Details</a>
                        <a class="btn btn-outline-success" href="@Url.Action("Delete", new { id = item.Id })">Delete</a>
                    </div>
            </td>
        </tr>
}
    </tbody>
</table>
